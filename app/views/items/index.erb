<%=
  erb :'partials/header',
      locals: {
        title: 'Items',
        dashboard: '/items-dashboard',
        create: {
          object: 'Item',
          path: '/items/new'
        }
      }
%>

<ul>
  <% @items.find_each do |item| %>
    <li class='index-list'>
      <a href='/items/<%= item.id %>' class="index-item"><%= item.title %></a>
      <a href='/item/<%= item.id %>/edit' class='edit-button'>Edit</a>
      <form action='/item/<%= item.id %>' method='POST' class='delete-button'>
        <input type='hidden' name='_method' value='DELETE'>
        <input type='submit' value='Delete'/>
      </form>
    </li>
  <% end %>
</ul>
