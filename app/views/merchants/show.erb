<%=
  erb :'partials/header',
      locals: {
        title: merchant.name,
        dashboard: '/merchants-dashboard',
        create: nil,
        buttons: {
          edit: {
            href: "/merchants/#{merchant.id}/edit",
            text: 'Edit'
          },
          delete: {
            href: '#',
            text: 'Delete'
          }
        }
      }
%>

<div class="container">
  <ul class="cards">
    <% merchant.items.find_each do |item| %>
      <li class="card">
        <a href="/items/<%= item.id %>">
          <img src="<%= item.image %>" alt="<%= item.title %>" title="<%= item.title %>" />
        </a>
        <div class="info">
          <a href="/items/<%= item.id %>"><%= item.title %></a>
          <p>$<%= item.price %></p>
        </div>
      </li>
    <% end %>
  </ul>
</div>