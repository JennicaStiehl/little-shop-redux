<%=
  erb :'partials/header',
      locals: {
        title: 'Invoices',
        dashboard: '/invoices-dashboard',
        create: {
          object: 'Invoice',
          path: '/invoices/new'
        }
      }
%>
<div class="container">
  <ul class="collection">
    <% invoices.find_each do |invoice| %>
      <li class="collection-item">
        <a href="/invoice/<%= invoice.id %>"><%= invoice.id %></a>

        <div class="secondary-content">
          <form action="/invoice/<%= invoice.id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <a href="/invoice/<%= invoice.id %>/edit" class='edit button'>Edit</a>
            <input type="submit" value="Delete" class="delete button"/>
          </form>
        </div>
      </li>
    <% end %>
  </ul>
</div>
